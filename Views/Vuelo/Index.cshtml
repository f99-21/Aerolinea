@model List<Vuelo>
<h2>Lista de Vuelos</h2>
<table>
    <thead>
        <tr><th>#</th><th>Origen</th><th>Destino</th><th>Fecha</th><th>Precio</th><th></th></tr>
    </thead>
    <tbody>
    @foreach (var vuelo in Model)
    {
        <tr>
            <td>@vuelo.NumeroVuelo</td>
            <td>@vuelo.Origen</td>
            <td>@vuelo.Destino</td>
            <td>@vuelo.Horario.ToString("g")</td>
            <td>$@vuelo.Precio</td>
            <td><a href="/Reserva/Crear?idVuelo=@vuelo.IdVuelo">Reservar</a></td>
        </tr>
    }
    </tbody>
</table>