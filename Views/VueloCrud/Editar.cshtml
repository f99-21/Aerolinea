@model Vuelo
<h2>Editar Vuelo</h2>
<form method="post">
    <input type="hidden" name="IdVuelo" value="@Model.IdVuelo" />
    <label>NÃºmero de vuelo:</label>
    <input type="number" name="NumeroVuelo" value="@Model.NumeroVuelo" required />
    <label>Origen:</label>
    <input type="text" name="Origen" value="@Model.Origen" required />
    <label>Destino:</label>
    <input type="text" name="Destino" value="@Model.Destino" required />
    <label>Escala:</label>
    <input type="text" name="Escala" value="@Model.Escala" />
