@model IEnumerable<Aerolinea.Models.Tarifa>

<h2>Lista de Tarifas</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Crear Nueva Tarifa</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tipo</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Tipo</td>
                <td>@item.Descripcion</td>
                <td>$@item.Precio</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id_Tarifas" class="btn btn-info btn-sm">Ver</a>
                    <a asp-action="Edit" asp-route-id="@item.Id_Tarifas" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id_Tarifas" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
