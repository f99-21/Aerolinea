@model Aerolinea.Models.Vuelo

@{
    ViewData["Title"] = "Detalle del Vuelo";
}

<h2 class="text-center mt-4">Detalle del Vuelo</h2>

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container my-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Detalles del Vuelo</h4>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <tr>
                    <th>Origen</th>
                    <td>@Model.Origen</td>
                </tr>
                <tr>
                    <th>Destino</th>
                    <td>@Model.Destino</td>
                </tr>
                <tr>
                    <th>Horario</th>
                    <td>@Model.Horario.ToString("f")</td>
                </tr>
                <tr>
                    <th>Precio</th>
                    <td>$@Model.Precio</td>
                </tr>
            </table>

            <form asp-action="Pagar" method="post">
                <input type="hidden" name="id" value="@Model.id_vuelo" />
                <button type="submit" class="btn btn-success w-100 mt-3">
                    <i class="bi bi-credit-card"></i> Confirmar y Pago
                </button>
            </form>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
