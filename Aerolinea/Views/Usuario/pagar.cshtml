@model Aerolinea.Models.Vuelo

@{
    ViewData["Title"] = "Pago con Tarjeta";
}

<h2 class="text-center mt-4">Pago con Tarjeta</h2>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4>Resumen del Vuelo</h4>
                </div>
                <div class="card-body">
                    <p><strong>Vuelo:</strong> @Model.Numero_vuelo</p>
                    <p><strong>Origen:</strong> @Model.Origen</p>
                    <p><strong>Destino:</strong> @Model.Destino</p>
                    <p><strong>Precio:</strong> $@Model.Precio</p>
                </div>
            </div>

            <div class="card shadow mt-4">
                <div class="card-header bg-success text-white">
                    <h4>Datos de la Tarjeta</h4>
                </div>
                <div class="card-body">
                    <form asp-action="ProcesarPago" method="post">
                        <input type="hidden" name="id" value="@Model.id_vuelo" />

                        <div class="mb-3">
                            <label for="numero" class="form-label">Número de tarjeta</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-credit-card"></i></span>
                                <input type="text" name="numero" id="numero" class="form-control" maxlength="16" placeholder="1234 5678 9012 3456" required />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="cvv" class="form-label">CVV</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                <input type="text" name="cvv" id="cvv" class="form-control" maxlength="3" placeholder="123" required />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="expiracion" class="form-label">Fecha de expiración</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-calendar"></i></span>
                                <input type="month" name="expiracion" id="expiracion" class="form-control" required />
                            </div>
                        </div>

                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Pagar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
