@model Aerolinea.Models.Admi

<style>
    .edit-card {
        background: #c9e9f9; /* azul suave */
        border-radius: 20px;
        padding: 30px 25px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        max-width: 500px;
        margin: 40px auto;
    }

        .edit-card h2 {
            font-weight: 700;
            margin-bottom: 30px;
            text-align: center;
        }

    .form-label {
        font-weight: 600;
        font-size: 1.05rem;
    }

    .form-control {
        border-radius: 10px;
        box-shadow: none;
        border: 1.5px solid #ced4da;
        padding: 10px 12px;
        font-size: 1rem;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 5px rgba(13, 110, 253, 0.5);
            outline: none;
        }

    .btn-custom {
        border-radius: 15px;
        font-weight: 600;
        padding: 12px 30px;
        box-shadow: 0 3px 8px rgba(0,0,0,0.15);
        transition: filter 0.3s ease;
        min-width: 120px;
    }

        .btn-custom:hover {
            filter: brightness(0.9);
            text-decoration: none;
        }

    .btn-group {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 25px;
    }
</style>

<div class="edit-card">
    <h2>Editar Administrador</h2>

    <form asp-action="Edit">
        <input type="hidden" asp-for="id_admi" />

        <div class="mb-3">
            <label asp-for="id_login" class="form-label"></label>
            <input asp-for="id_login" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Contraseña" class="form-label"></label>
            <input asp-for="Contraseña" class="form-control" type="password" />
        </div>

        <div class="btn-group">
            <button type="submit" class="btn btn-success btn-custom">Guardar</button>
            <a asp-action="Index" class="btn btn-secondary btn-custom">Cancelar</a>
        </div>
    </form>
</div>
