            <a asp-controller="pasajerosController1" asp-action="DetallesVuelos" class="block bg-green-700 text-white rounded-2xl shadow-lg hover:scale-105 transform transition p-6 text-center">
                <div class="text-4xl mb-2">🔎</div>
                <div class="text-xl font-semibold">Consultar Vuelos</div>
            </a>

        </div>
    </div>
</div>
