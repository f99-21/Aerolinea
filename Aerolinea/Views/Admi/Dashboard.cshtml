            <a asp-controller="Ocupacion" asp-action="Index" class="block bg-white dark:bg-gray-900 border-2 border-cyan-500 text-cyan-600 dark:text-cyan-400 rounded-2xl shadow hover:scale-105 transform transition p-6 text-center">
