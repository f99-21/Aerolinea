@model Aerolinea.Models.Pago

<style>
    .delete-card {
        background: #c9e9f9; /* azul pastel */
        border-radius: 20px;
        padding: 30px 25px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        max-width: 480px;
        margin: 50px auto;
        text-align: center;
    }

        .delete-card h2 {
            font-weight: 700;
            margin-bottom: 25px;
        }

        .delete-card p {
            font-size: 1.1rem;
            margin-bottom: 15px;
        }

    .btn-custom {
        border-radius: 15px;
        font-weight: 600;
        padding: 12px 30px;
        box-shadow: 0 3px 8px rgba(0,0,0,0.15);
        transition: filter 0.3s ease;
        min-width: 120px;
        margin: 10px 8px;
    }

        .btn-custom:hover {
            filter: brightness(0.9);
            text-decoration: none;
        }

    form {
        margin-top: 20px;
    }
</style>

<div class="delete-card">
    <h2>Confirmar Eliminación</h2>

    <p><strong>Detalle:</strong> @Model.detalle</p>
    <p><strong>Total:</strong> $@Model.total</p>
    <p><strong>Método:</strong> @Model.metodo_pago</p>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="id_pago" />
        <button type="submit" class="btn btn-danger btn-custom">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary btn-custom">Cancelar</a>
    </form>
</div>
