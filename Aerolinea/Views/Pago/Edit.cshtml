@model Aerolinea.Models.Pago

<style>
    .edit-card {
        background: #c9e9f9; /* azul pastel */
        border-radius: 20px;
        padding: 30px 25px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        max-width: 520px;
        margin: 40px auto;
    }

        .edit-card h2 {
            font-weight: 700;
            margin-bottom: 30px;
            text-align: center;
        }

    .form-label {
        font-weight: 600;
        font-size: 1.05rem;
    }

    .form-control, select.form-control {
        border-radius: 10px;
        border: 1.5px solid #ced4da;
        padding: 10px 12px;
        font-size: 1rem;
        box-shadow: none;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .form-control:focus, select.form-control:focus {
            border-color: #198754;
            box-shadow: 0 0 5px rgba(25, 135, 84, 0.5);
            outline: none;
        }

    .btn-custom {
        border-radius: 15px;
        font-weight: 600;
        padding: 12px 30px;
        box-shadow: 0 3px 8px rgba(0,0,0,0.15);
        transition: filter 0.3s ease;
        min-width: 120px;
        font-size: 1rem;
        margin-right: 10px;
    }

        .btn-custom:hover {
            filter: brightness(0.9);
            text-decoration: none;
        }

    .btn-group {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 25px;
    }

    .text-danger {
        font-weight: 600;
        font-size: 0.9rem;
    }
</style>

<div class="edit-card">
    <h2>Editar Pago</h2>

    <form asp-action="Edit" method="post" novalidate>
        <input type="hidden" asp-for="id_pago" />

        <div class="mb-3">
            <label asp-for="detalle" class="form-label"></label>
            <input asp-for="detalle" class="form-control" />
            <span asp-validation-for="detalle" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="total" class="form-label"></label>
            <input asp-for="total" class="form-control" type="number" step="0.01" min="0" />
            <span asp-validation-for="total" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="metodo_pago" class="form-label"></label>
            <input asp-for="metodo_pago" class="form-control" />
            <span asp-validation-for="metodo_pago" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="id_admi" class="form-label">Administrador</label>
            <select asp-for="id_admi" class="form-control" asp-items="ViewBag.IdAdmi"></select>
            <span asp-validation-for="id_admi" class="text-danger"></span>
        </div>

        <div class="btn-group justify-content-center">
            <button type="submit" class="btn btn-success btn-custom">Actualizar</button>
            <a asp-action="Index" class="btn btn-secondary btn-custom">Cancelar</a>
        </div>
    </form>
</div>
