@model Aerolinea.Models.Pasajero

<h2>Editar Pasajero</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="id_pasajero" />

    <div class="form-group">
        <label asp-for="id_login"></label>
        <input asp-for="id_login" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="documento"></label>
        <input asp-for="documento" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
