@model IEnumerable<Aerolinea.Models.Pasajero>

<h2>Pasajeros</h2>

<a asp-action="Create" class="btn btn-primary">Crear Nuevo Pasajero</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Documento</th>
            <th>Correo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(item.documento ?? "Sin documento")</td>
                <td>@(item.Login?.correo ?? "Sin correo")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.id_pasajero" class="btn btn-info">Ver</a>
                    <a asp-action="Edit" asp-route-id="@item.id_pasajero" class="btn btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.id_pasajero" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
